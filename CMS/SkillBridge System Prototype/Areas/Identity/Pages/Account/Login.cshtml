@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col">
        <section>
            <form id="account" method="post">
                <div class="card mx-auto" style="width:100%;max-width:300px;">
                    <div class="card-body">
                        <h1 id="login-title">@ViewData["Title"]</h1>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Log in</button>
                        </div>
                        <div class="form-group">
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>
                            <!--<p>
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
        </p>-->
                        </div>
                        <div class="form-group">
                            <div class="alert alert-warning">
                                <span class="italic">Use of this site constitutes your expressed consent to allow skillbridge.org and/or its partners and affiliates to send you occasional updates in the form of electronic mail.</span>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>
