@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <div id="logout-container" class="d-inline-flex">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Email" title="Manage" data-toggle="tooltip">@User.Identity.Name</a>&nbsp;<form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"><button type="submit" class="nav-link btn btn-link" title="Logout" data-toggle="tooltip" aria-label="Logout"><i class="fa fa-sign-out-alt fa-fw"></i></button></form>
    </div>
}
else
{
    <ul class="navbar-nav">
        <!--<li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>-->
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    </ul>
}
    
