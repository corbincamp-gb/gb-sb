@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "New Opportunity Submission Failed";
}

<div class="row">
    <div class="col">
        <div class="alert alert-primary" role="alert">
            <div class="text-center">
                <h1 class="update-submitted-title">Your new opportunity has failed to submit!</h1>
                <p>Please try again</p>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        <div class="text-center">
            <p class="bold">What do you want to do next?</p>
            <p>
                <!--<a class="btn btn-primary mb-3" asp-controller="MyPrograms" asp-action="EditProgram">My Program</a>-->
                <a asp-controller="Home" asp-action="Index">Home</a><text>&nbsp;&nbsp;&#124;&nbsp;</text>
                @if (SignInManager.IsSignedIn(User))
                {
                    if (User.IsInRole("Organization"))
                    {<a asp-controller="MyOrganization" asp-action="EditOrganization">My Organization</a><text>&nbsp;&nbsp;&#124;&nbsp;&nbsp;</text><a asp-controller="MyPrograms" asp-action="MyPrograms">My Programs</a>}
                if (User.IsInRole("Program"))
                {
                    <a asp-controller="MyPrograms" asp-action="EditProgram">My Program</a>
                }
            }
                <text>&nbsp;&#124;&nbsp;&nbsp;</text><a asp-controller="MyOpportunities" asp-action="MyOpportunities">My Opportunities</a>
            </p>
        </div>
    </div>
</div>

