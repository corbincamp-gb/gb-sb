@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Skillbridge.Business.Model.Db.UserRoleModel>
@{
    var roleId = ViewBag.roleId;
}


    
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Add or remove users from this role</h2>
        </div>
        <div class="card-body">
            @for(int i=0; i < Model.Count; i++)
            {
            <div class="form-check m-1">
                <input asp-for="@Model[i].UserId" type="hidden" />
                <input asp-for="@Model[i].UserName" type="hidden" />
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label asp-for="@Model[i].IsSelected" class="form-check-label">
                    @Model[i].UserName
                </label>
            </div>
            }
        </div>
        <div class="card-footer">
            <button type="submit" value="Update" class="btn btn-primary">Update</button>
            <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>